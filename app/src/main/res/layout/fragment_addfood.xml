<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/anhnenaddfood"
    android:layout_height="match_parent">
    <EditText

        android:layout_marginTop="20dp"
        android:layout_height="30dp"
        android:hint="Nhập tên món ăn"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:id="@+id/edt_namefood"
        android:gravity="center"
        android:background="@drawable/botron_edt"
        />
    <Spinner
        android:layout_marginTop="17dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:id="@+id/spn_food"
        android:layout_margin="10dp"
        android:background="@drawable/botron_edt"/>

    <EditText

        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Nhập giá"
        android:gravity="center"
        android:id="@+id/edt_price"
        android:background="@drawable/botron_edt"
        android:layout_margin="1dp"/>
    <EditText
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:hint="Nhập review"
        android:gravity="center"
        android:id="@+id/edt_describe"
        android:background="@drawable/botron_edt"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:id="@+id/imv_camera"/>
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_folder_24"
            android:id="@+id/imv_folder"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imv_add_food"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/welcome_kfc" />
    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_addfood"
        android:onClick="AddFood"
        android:layout_marginTop="10dp"
        android:text="Thêm mặt hàng"
        android:layout_gravity="center"
        android:textColor="#fff"
        android:background="@drawable/botron_btn"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/welcome_kfc" />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:drawableStart="@drawable/ic_baseline_how_to_reg_24"
            android:drawableLeft="@drawable/me1"
            android:background="@drawable/botron_edt"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/edt_user"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:pointerIcon="cell"
            android:drawableStart="@drawable/ic_baseline_vpn_key_24"
            android:drawableLeft="@drawable/pass"
            android:background="@drawable/botron_edt"
            android:inputType="textPassword"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/edt_pass"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember login ?"
            android:layout_gravity="center"
            android:id="@+id/cb_remember"/>

        <Button
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:id="@+id/btn_login"
            android:text="Đăng  Nhập  "
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="137dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_addacc"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/user1" />

            <ImageView
                android:id="@+id/imv_reset"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/kay" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>